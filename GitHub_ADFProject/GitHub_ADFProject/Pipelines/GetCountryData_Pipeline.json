{
  "name": "GetCountryData_Pipeline",
  "properties": {
    "activities": [
      {
        "name": "ForEach_Country",
        "type": "ForEach",
        "dependsOn": [],
        "typeProperties": {
          "items": [
            "india",
            "us",
            "uk",
            "china",
            "russia"
          ],
          "activities": [
            {
              "name": "Copy_Country_Data",
              "type": "Copy",
              "dependsOn": [],
              "typeProperties": {
                "source": {
                  "type": "HttpSource"
                },
                "sink": {
                  "type": "JsonSink",
                  "storeSettings": {
                    "type": "AzureBlobStorageWriteSettings",
                    "fileName": {
                      "value": "@{item()}.json",
                      "type": "Expression"
                    },
                    "folderPath": {
                      "value": "country-data",
                      "type": "Expression"
                    }
                  }
                },
                "enableStaging": false
              },
              "inputs": [
                {
                  "referenceName": "Country_REST_API_Dataset",
                  "type": "DatasetReference",
                  "parameters": {
                    "CountryName": "@{item()}"
                  }
                }
              ],
              "outputs": [
                {
                  "referenceName": "Country_JSON_Output_Dataset",
                  "type": "DatasetReference",
                  "parameters": {
                    "CountryName": "@{item()}"
                  }
                }
              ]
            }
          ]
        }
      }
    ]
  }
}
